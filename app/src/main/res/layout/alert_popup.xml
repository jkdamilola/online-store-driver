<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:orientation="vertical" android:background="@drawable/white_rounds" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="20.0sp">
        <TextView android:textSize="18.0sp" android:gravity="center" android:id="@+id/tv_error_header" android:padding="13.0sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Alert" android:layout_centerHorizontal="true" />
        <RelativeLayout android:id="@+id/relativelayout" android:background="@color/soft_gray" android:layout_width="fill_parent" android:layout_height="0.9dip" android:layout_below="@id/tv_error_header" />
        <TextView android:textSize="16.0sp" android:gravity="center" android:id="@+id/tv_error_message" android:padding="18.0sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Message text" android:maxLines="10" android:layout_below="@id/tv_error_header" android:layout_centerHorizontal="true" />
        <RelativeLayout android:id="@+id/line" android:background="@color/soft_gray" android:layout_width="fill_parent" android:layout_height="0.9sp" android:layout_below="@id/tv_error_message" />
        <RelativeLayout android:id="@+id/rl" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/line">
            <Button android:textSize="16.0sp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/button_ok" android:background="@color/transy" android:padding="13.0sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Ok" android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>